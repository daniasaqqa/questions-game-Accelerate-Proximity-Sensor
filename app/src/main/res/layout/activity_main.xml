<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/add_question"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textfeild_design"
        android:ems="15"
        android:hint="قم بإدخال السؤال هنا"
        android:inputType="text"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_question"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_one"
        android:text="إضافة سؤال"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/add_question"
        app:layout_constraintStart_toStartOf="@+id/add_question"
        app:layout_constraintTop_toBottomOf="@+id/add_question" />

    <TextView
        android:id="@+id/number_of_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="عدد الأسئلة"
        android:textColor="#006BBF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_question"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/btn_add_question"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_question" />

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/btn_two"
        android:text="بدء اللعب"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/number_of_question"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/number_of_question"
        app:layout_constraintTop_toBottomOf="@+id/number_of_question"
        app:layout_constraintVertical_bias="0.373" />


</androidx.constraintlayout.widget.ConstraintLayout>